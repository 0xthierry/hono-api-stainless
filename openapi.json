{
  "openapi": "3.0.0",
  "info": {
    "title": "Todo API",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/todos": {
      "get": {
        "tags": [
          "Todos"
        ],
        "responses": {
          "200": {
            "description": "Returns all todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "title": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 100
                      },
                      "description": {
                        "type": "string",
                        "maxLength": 500
                      },
                      "completed": {
                        "type": "boolean"
                      },
                      "fileUrl": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "title",
                      "completed"
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                  },
                  "description": {
                    "type": "string",
                    "maxLength": 500
                  },
                  "completed": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "title",
                  "completed"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a new todo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "title": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 500
                    },
                    "completed": {
                      "type": "boolean"
                    },
                    "fileUrl": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "completed"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/todos/:id": {
      "get": {
        "tags": [
          "Todos"
        ],
        "responses": {
          "200": {
            "description": "Returns a specific todo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "title": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 500
                    },
                    "completed": {
                      "type": "boolean"
                    },
                    "fileUrl": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "completed"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Todo not found"
          }
        }
      },
      "put": {
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                  },
                  "description": {
                    "type": "string",
                    "maxLength": 500
                  },
                  "completed": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updates a todo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "title": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 500
                    },
                    "completed": {
                      "type": "boolean"
                    },
                    "fileUrl": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "completed"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Todo not found"
          }
        }
      },
      "delete": {
        "tags": [
          "Todos"
        ],
        "responses": {
          "204": {
            "description": "Deletes a todo"
          },
          "404": {
            "description": "Todo not found"
          }
        }
      }
    },
    "/todos/:id/upload": {
      "post": {
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Uploads a file to a todo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "title": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 100
                    },
                    "description": {
                      "type": "string",
                      "maxLength": 500
                    },
                    "completed": {
                      "type": "boolean"
                    },
                    "fileUrl": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "completed"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Todo not found"
          }
        }
      }
    },
    "/todos/:id/progress": {
      "get": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "The ID of the todo"
          }
        ],
        "tags": [
          "Todos"
        ],
        "responses": {
          "200": {
            "description": "Streams the upload progress using SSE",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
